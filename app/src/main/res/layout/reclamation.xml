<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#F5F5F5"
             tools:context=".Reclamation">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">



        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#16145F"
                      android:text="Reclamations : "
                      android:textAlignment="center"
                      android:textSize="25sp"/>


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:text="Infos generales :"
            />



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Nom"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="0dp"
                        android:id="@+id/recnom"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        android:textColor="@color/black"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Prenom"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:elevation="@dimen/cardview_default_elevation"
                    android:id="@+id/recprenom"
                        android:textColor="@color/black"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Adress"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:elevation="@dimen/cardview_default_elevation"
                android:id="@+id/recadr"
                        android:textColor="@color/black"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Code postale :"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:elevation="@dimen/cardview_default_elevation"
        android:id="@+id/reccp"
                        android:textColor="@color/black"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Numero de telephone"/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:elevation="@dimen/cardview_default_elevation"
        android:id="@+id/rectel"
                        android:textColor="@color/black"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Adress e-mail : "/>
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:elevation="@dimen/cardview_default_elevation"
                        android:id="@+id/recmail"
                        android:textColor="@color/black"
                />
            </LinearLayout>



            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:text="Passer la reclamatoin :"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:text="Type de reclamation :"
                />
                <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">

                    <CheckBox android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                                android:id="@+id/recMobch"
                              android:text="Mobile"/>
                    <CheckBox android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                                android:id="@+id/recFixCh"
                              android:text="Fixe"/>
                    <CheckBox android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/recinter"
                              android:text="Internet"/>

                    <CheckBox android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/recwifi"
                              android:text="WIFI"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                   <com.google.android.material.textfield.TextInputEditText
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:drawableTint="@color/black"
                           android:inputType="textImeMultiLine"
                           android:layout_height="wrap_content"
                            android:id="@+id/recdesc"
                           android:padding="20dp"
                           android:elevation="@dimen/cardview_default_elevation"
                           android:hint="description"
                           android:textColor="@color/black"
                   />

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="2"
                          android:orientation="horizontal">
                <Button android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/btnbakcgroud"
                        android:layout_marginEnd="10dp"
                        android:height="30px"
                        android:id="@+id/recBtn"
                        android:layout_height="match_parent"
                        android:text="Confirme"/>
                <Button
                        android:background="@drawable/btnbakcgroud"
                        android:layout_marginEnd="10dp"
                        android:layout_width="0dp"
                        android:height="30px"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="annuler"/>

            </LinearLayout>
               </LinearLayout>


    </ScrollView>

</FrameLayout>